{
    "parser": "babel-eslint",
    "extends": "eslint-config-airbnb",
    "env": {
        "es6": true,
        "jest/globals": true
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-filename-extension": "off",
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ]
    }
}
